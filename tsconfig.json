{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*",
    ".github/*",
    "backup/*",
    "build/*",
    "extension/*",
    "pages/*",
    "test/*",
    "vendor/*"
  ]
}
